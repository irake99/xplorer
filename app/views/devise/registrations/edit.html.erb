
<div class="custom-form">
  <div class="form-horizontal">
    <%= devise_error_messages! %>
    <fieldset>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <legend>修改密碼</legend>
      </div>
      <div class="form-group">
        <div class="col-lg-12">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "電子郵件"%>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-12">
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>目前待確認: <%= resource.unconfirmed_email %></div>
          <% end %>
          <% if @minimum_password_length %>
            <br />
            <em>至少<%= @minimum_password_length %>字元</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "新密碼" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-12">
          <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-control", placeholder: "確認新密碼" %>
        </div>
      </div>
      <br />
      <div class="form-group">
        <div class="col-lg-12">
          <br />
          <em>請輸入現在密碼</em>
          <%= f.password_field :current_password, autocomplete: "current-password",class: "form-control", placeholder: "現在密碼" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-12 text-center">
          <%= f.submit "更新密碼", class: "btn btn-default btn-default" %>
        </div>
      </div>
      <% end %>
      <%= link_to "上一頁", :back %>
    </fieldset>
  </div>
</div>
