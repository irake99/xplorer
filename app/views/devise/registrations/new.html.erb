
<div class="custom-form">
  <div class="form-horizontal">
    <%= devise_error_messages! %>
    <fieldset>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <legend>註冊</legend>
      <div class="form-group">
        <div class="col-lg-12">
          <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "暱稱"%>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-12">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "電子郵件"%>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-12">
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "密碼" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-12">
          <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-control", placeholder: "確認密碼" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-12 text-center">
          <%= f.submit "註冊", class: "btn btn-default btn-block"%>
        </div>
      </div>
      <% end %>
      <div class="form-group">
        <div class="col-lg-12">
        <%= render "devise/shared/links" %>
        </div>
      </div>
    </fieldset>
  </div>
</div>

