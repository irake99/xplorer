
<div class="custom-form">
  <form class="form-horizontal">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <fieldset>
      <legend>登入</legend>
      <div class="form-group">
        <div class="col-lg-12">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id:"inputEmail", placeholder: "電子郵件"%>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-12">
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "密碼" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-12 text-center">
          <%= f.submit "登入", class: "btn btn-default btn-block"%>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-12">
        <%= render "devise/shared/links" %>
        </div>
      </div>
    </fieldset>
    <% end %>
  </form>
</div>


